<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.hackathontourism">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FirstActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CityActivity"
            android:label="@string/places_to_visit" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CityJaipur" />
        <activity
            android:name=".HawaMahal"
            android:label="@string/title_activity_hawa_mahal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JalMahal"
            android:label="@string/title_activity_jal_mahal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AlbertHallMuseum"
            android:label="@string/title_activity_albert_hall_museum"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".JantarMantar"
            android:label="@string/title_activity_jantar_mantar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".QRCodeGeneration">

        </activity>
        <activity android:name=".RegisterActivity"></activity>
    </application>

</manifest>